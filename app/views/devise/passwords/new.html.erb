<div class="text-center">
    <a href="index.html" class="logo"><span>&nbsp<span>&nbsp</span></span></a>
    <h5 class="text-muted m-t-0 font-600">&nbsp</h5>
</div>
<div class="m-t-40 card-box">
  <div class="text-center">
      <h4 class="text-uppercase font-bold m-b-0">비밀번호 찾기</h4>
  </div>
  <div class="p-20">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal m-t-20" }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control",
        placeholder: "email"%>
      </div>
    
      <div class="actions">
        <%= f.submit "나에게 비밀번호 재설정 안내 보내기", class: "btn btn-primary btn-bordred btn-block waves-effect waves-light"  %>
      </div>
    <% end %>
  </div>
</div>
<!-- end card-box-->

<div class="row">
    <div class="col-sm-12 text-center">
        <%= render "devise/shared/links" %>
    </div>
</div>

