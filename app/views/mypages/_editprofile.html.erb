<div id="editprofile" class="modal-demo card border-primary" style="">
    <button type="button" class="close" onclick="Custombox.close();">
        <span>×</span><span class="sr-only">Close</span>
    </button>
    <h4 class="custom-modal-title bg-primary">프로필 수정</h4>
    <div class="custom-modal-text text-left">
        <%= form_tag('/mypage/editprofile', method: :patch, role: "form", multipart: true ) do %>
            <div class="form-group ">
                <label for="avatar">프로필 사진</label>
                <input name="avatar" type="file" class="dropify" data-max-file-size="1M" value="<%= current_user.avatar %>"></input>
            </div>
             <div class="form-group">
                <label for="username">유저 이름</label>
                <input name="username" type="text" value="<%= current_user.username %>" class="form-control" id="name" placeholder="게임 아이디를 입력하세요">
                    
                </input>
            
            </div>
            <button type="submit" class="btn btn-success waves-effect waves-light">Save</button>
            <button type="button" class="btn btn-danger waves-effect waves-light m-l-5" onclick="Custombox.close();">
                Cancel
            </button>
        <% end %>
    </div>
</div>
