<div id="gameaddbox" class="modal-demo card border-primary" style="">
                <button type="button" class="close" onclick="Custombox.close();">
                    <span>×</span><span class="sr-only">Close</span>
                </button>
                <h4 class="custom-modal-title bg-primary">게임 연동</h4>
                <div class="custom-modal-text text-left">
                    <%= form_tag "/mypage/game", methd: :post, remote: true do %>
                        
                        <div class="form-group">
                            <label for="game">Game</label>
                            <select name="category" class="form-control">
                              <% @categories.each do |category|%>
                              <option value="<%= category.id%>"><%= category.game_full_name %></option>
                              <% end %>
                            </select>
                        </div>
                         <div class="form-group">
                            <label for="name">ID</label>
                            <input name="usernickname" type="text" class="form-control" id="name" placeholder="게임 아이디를 입력하세요">
                        </div>
                        <button type="submit" class="btn btn-success waves-effect waves-light">Save</button>
                        <button type="button" class="btn btn-danger waves-effect waves-light m-l-5" onclick="Custombox.close();">
                            Cancel
                        </button>
                        
                    <% end %>
                </div>
            </div>